package kr.or.ddit.study03.sec03;

import java.util.Scanner;

public class CastExample01 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		CastExample01 obj = new CastExample01();
		obj.process();

	}

	public void process() {
//		method1();
		method2();
		
	}
	
	public void method1() {
//		1. int -> long
		int i1= 100;
		long l1 = i1;
		
//		2. long -> int
		long l2 = 100;
		int i2 = (int)l2;
		
//		3. double -> int
		double d3 = 10.4;
		int i3 = (int)d3;
		System.out.println("d3 : "+d3);
		System.out.println("i3 : "+i3);
		
//		4. int -> doube
		
		
		
		
	}

	public void method1() {
//		byte < short < int < long < float < double

		// 자동 캐스팅
		// 작은 값을 큰값에 넣을때 자동으로 형 변환됨.
		
		byte b1 = 10;
		short s1 = b1;
		
//		int -> long
		int i2 = 1000;
		long l2 = i2;
				
		System.out.println("i2 : "+i2);
		System.out.println("l2 : "+i2);
		
		// 강제 캐스팅
		// 큰 값을 작은 타입에 넣을경우
		// type1 = (type1)type2
		int i3 = 10;
		short s3 =(short)i3;
		
		System.out.println("i3 : "+i3);
		System.out.println("s3 : "+s3);
		
	}

}
