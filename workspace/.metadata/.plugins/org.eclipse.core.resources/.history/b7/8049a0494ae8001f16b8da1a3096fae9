	public void method4() {
		String menu = "1. 아메리카노 \n" + "2. 딸기에이드 \n" + "3. 카페라떼 \n";
		String bill = "";
		while (true) {
			//
			System.out.println(menu);
			int sel = sc.nextInt();
		}
		System.out.println("주문 내역 ");
		System.out.println(bill);

	}

	public void method3() {
//		자리수의 합을 구하시오.

		int n = 123;

		int sum = 0;
		while (n > 0) {
			sum += n % 10;
			n /= 10;
		}
	}

	public void method2() {
//		1~10까지의 합
		 int sum=0;
		int i=1;
		while(i<=10) {
			sum+=i;
			i++;
		}
		System.out.println("1~10까지의 합:"+sum);
	}

	public void method1() {
