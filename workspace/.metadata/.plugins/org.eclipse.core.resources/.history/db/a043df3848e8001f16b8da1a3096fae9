	public void method3() {
//		자리수의 합을 구하시오.

		int n = 123;
		int sum = 0;
		while (n > 0) {
			sum += n % 10;
			n /= 10;
		}
	}

	public void method2() {
//		1~10까지의 합
		 int sum=0;
		int i=1;
		while(i<=10) {
			sum+=i;
			i++;
		}
		System.out.println("1~10까지의 합:"+sum);
	}

	public void method1() {
//		while(조건식)
//		while (true) {
//			System.out.println("동작중입니다.");
//		}
//	}

		for(;true;) {
			System.out.println("동작중입니다.");
		}
